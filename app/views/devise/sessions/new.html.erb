<div class="container mx-auto pt-8 p-8">
<%= render "partials/mainnav" %>
  <p id="notice"><%= notice %></p>
  <h1 class="h1 mb-8 lowercase pb-4 mb-2 font-hairline">log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"lg:w-2/5 w-full shadow appearance-none border rounded py-2 px-3 mb-6 text-grey-darker" %>
  </div>

  <div class="input-field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class:"lg:w-2/5 w-full shadow appearance-none border rounded py-2 px-3 mb-6 text-grey-darker" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="input-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <br />

  <div class="actions">
    <%= f.submit "Log in", class: "border border-indigo-darker rounded p-2 no-underline text-indigo-darker hover:text-white hover:bg-indigo-darker hover:shadow-inner" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
</div>

<%= render "partials/footer" %>
