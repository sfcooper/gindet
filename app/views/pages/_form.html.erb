<%= form_with(model: page, local: true) do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "block text-grey-darker text-sm font-bold mb-2" %>
    <%= form.text_field :title, id: :page_title, class:"lg:w-2/5 w-full shadow appearance-none border rounded py-2 px-3 mb-6 text-grey-darker hover:border-teal focus:border-teal focus:bg-grey-lightest" %>
  </div>

  <div class="field">
    <%= form.label :text, class: "block text-grey-darker text-sm font-bold mb-2" %>
    <%= form.text_area :text, id: :page_text, class:"lg:w-2/5 w-full shadow appearance-none border rounded py-2 px-3 mb-6 text-grey-darker hover:border-teal focus:border-teal focus:bg-grey-lightest" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
