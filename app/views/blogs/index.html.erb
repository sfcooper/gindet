<div class="container mx-auto pt-8 p-8">
<%= render "partials/mainnav" %>
  <p id="notice"><%= notice %></p>

<h1 class="h1 mb-8 lowercase pb-4 mb-2 font-hairline">blog</h1>

<div class="flex">
  <div class="w-3/4 flex flex-wrap">

<% @blogs.each do |blog| %>
  <div class="w-64 rounded overflow-hidden shadow-lg m-2 pb-4">
    <%= image_tag blog.picture.url(:square), class: "w-full" %>
    <div class="px-6 py-4">
      <h2 class="text-xl mb-2 font-hairline"><%= link_to blog_path(blog), class: "appearance-none no-underline text-blue-darkest hover:underline w-auto" do %><% blog.title %><% end %> </h2>
      <p class="text-grey-darker text-base"><%= blog.snippet %>
      </p>
      <br />
      <%= link_to 'Read', blog, class: "border border-indigo-darker rounded p-2 no-underline text-indigo-darker hover:text-white hover:bg-indigo-darker hover:shadow-inner" %>
    </div>
  </div>
  <% end %>
</div>
<div class="1/4">

</div>

</div>
</div>

<%= render "partials/footer" %>
