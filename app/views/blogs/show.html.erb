<div class="container mx-auto pt-8 p-8">
<%= render "partials/mainnav" %>
<p id="notice"><%= notice %></p>


<h1 class="h1 mb-8 w-full text-center lowercase h1 pb-4 mb-2 font-hairline"><%= @blog.title %></h1>

<div class="flex">
  <div class="w-3/4">
    <%= image_tag @blog.picture.url(:large), class: "p-2 border" %>
    <p class="block w-full text-center lowercase mb-4 font-hairline" >
      <%= @blog.snippet %>
    </p>
    <p class="block w-full text-center lowercase mb-4 font-hairline" >
      <%= @blog.text %>
    </p>
    <p class="pb-4">
      Article viewed <%= @blog.hits %> times.
    </p>

  <%= link_to 'All Posts', blogs_path,class: "bg-blue-dark hover:bg-blue-darker text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>

</div><!--end of container -->

<%= render "partials/footer" %>
