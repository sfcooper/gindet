<div class="container mx-auto pt-8 p-8">
<%= render "partials/mainnav" %>
<p id="notice"><%= notice %></p>
<div class="flex items-center">
  <div class="w-1/5"></div>
  <div class="w-3/5 border-b pb-6">

<h1 class="h1 mb-8 w-full text-center lowercase h1 pb-4 mb-2 font-hairline">
  <%= @botanical.name %>
</h1>

<p class="text-grey-darker font-light tracking-wide w-full p-4 leading-loose" style="font-family: 'Pavanam', serif;">
  <%= @botanical.description.html_safe %>
</p>
<br />


<p>
  gins containing <%= @botanical.name %>:
</p>
<br />
  <div class="flex flex-wrap"><!-- start gins loop-->
  <% @similargins.each do |gin| %>
  <div class="rounded shadow-lg hover:shadow m-2 w-48 pb-2">
      <div class="px-6 py-4">
        <h2 class="text-xl mb-2"><%= link_to gin_path(gin), class: "no-underline text-blue-darkest hover:text-blue-dark w-auto lowercase" do %><% gin.name %><% end %> </h2>
        <p class="flex-shrink">
          <%= gin.snippet %>
        </p>
        <br /><br />
        <%= link_to 'Read more', gin_path(gin), class: "border border-indigo-darker rounded p-2 no-underline text-indigo-darker hover:text-white hover:bg-indigo-darker hover:shadow-inner" %>
      </div>
    </div>
    <br />
  <% end %>

</div><!-- end gins loop-->
<br />
<% if admin_signed_in? %>
  <%= link_to 'edit', edit_botanical_path(@botanical), class: "border border-indigo-darker rounded p-2 no-underline text-indigo-darker hover:text-white hover:bg-green-dark hover:shadow-inner hover:border-green-darker" %> <%= link_to 'new', new_botanical_path, class: "border border-indigo-darker rounded p-2 no-underline text-indigo-darker hover:text-white hover:bg-green-dark hover:shadow-inner hover:border-green-darker" %>
  <% else %>
  <% end %>

</div>
<div class="w-1/5"></div>
</div>

<%= render "partials/footer" %>
