<div class="container mx-auto pt-16 p-8">
  <%= render "partials/mainnav" %>
  <p id="notice"><%= notice %></p>

<h1 class="h1 pb-4 mb-4 font-hairline">gins</h1>

  <div class="flex">
    <div class="w-3/4">

      <p class="pb-4 mb-4">
        we currently have <%= @gins.count %> gins listed on the gin detective and we're hoping to build one of the biggest lists out there.
      </p>
      <div class="flex flex-wrap"><!-- start gins loop -->
      <% @gins.each do |gin| %>
      <div class="rounded shadow-lg m-2 w-48 pb-2">
          <%= image_tag gin.pic, class: "" %>
          <div class="px-6 py-4">
            <h2 class="text-xl mb-2"><%= link_to gin_path(gin), class: "no-underline text-blue-darkest hover:text-blue-dark w-auto lowercase" do %><% gin.name %><% end %> </h2>
            <p class="flex-shrink">
              <%= gin.snippet %>
            </p>
            <p class="text-grey text-sm mt-6"><%= gin.abv %>%</p><br /><br />
            <%= link_to 'Read more', gin_path(gin), class: "border border-indigo-darker rounded p-2 no-underline text-indigo-darker hover:text-white hover:bg-indigo-darker hover:shadow-inner" %>
          </div>
        </div>
        <br />
      <% end %>

    </div><!-- end gins loop-->
    <% if admin_signed_in? %>
    <%= link_to 'New Gin', new_gin_path %>
    <% else %>
    <% end %>
    </div><!--end main column-->
    <div class="1/4 lg:flex-1">

    </div>
  </div>

</div><!-- end of container -->

<%= render "partials/footer" %>
