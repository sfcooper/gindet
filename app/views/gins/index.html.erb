<div class="container mx-auto pt-16 p-8">
  <%= render "partials/mainnav" %>
  <p id="notice"><%= notice %></p>

<h1 class="h1 pb-4 mb-4 font-hairline">gins</h1>

  <div class="flex">
    <div class="w-3/4">

      <p class="pb-4 mb-4">
        we currently have <%= @gins.count %> gins listed on the gin detective and we're hoping to build one of the biggest lists out there.
      </p>
      <div class="flex flex-wrap"><!-- start gins loop-->
      <% @gins.each do |gin| %>
      <div class="rounded overflow-hidden shadow-lg m-2">
          <%= image_tag gin.pic.url(:square), class: "max-w-full" %>
          <div class="px-6 py-4">
            <h2 class="font-bold text-xl mb-2"><%= link_to gin_path(gin), class: "no-underline text-blue-darkest hover:text-blue-dark w-auto" do %><% gin.name %><% end %> </h2>
            <p>
              <%= gin.snippet %>
            </p><br />
            <%= link_to 'Read more', gin_path(gin), class: "font-hairline bg-blue-dark hover:bg-blue-darker text-white font-bold py-2 px-4 rounded no-underline mt-8" %><br /><br />
            <p class="text-grey text-sm mt-6"><%= gin.created_at.strftime("%b %e, %Y") %></p>
          </div>
        </div>
        <br />
      <% end %>
      <%= link_to 'New Gin', new_gin_path %>
    </div><!-- end gins loop-->
    </div><!--end main column-->
    <div class="1/4">

    </div>
  </div>

</div><!-- end of container -->

<%= render "partials/footer" %>
