<div class="container mx-auto pt-8 p-8">
<%= render "partials/mainnav" %>
<p id="notice"><%= notice %></p>

<h1 class="h1 mb-8 w-full lowercase h1 pb-4 mb-2 font-hairline">gin events</h1>

<h2 class="h1 mb-8 w-full lowercase h1 pb-4 mb-2 font-hairline">upcoming events</h2>

<% @upcomingevents.each do |event| %>
  <div class="w-64 rounded overflow-hidden shadow-lg m-2 pb-4">
    <%= image_tag event.picture.url(:square), class: "w-full" %>
    <div class="px-6 py-4">
      <h2 class="text-xl mb-2 font-hairline"><%= link_to event_path(event), class: "appearance-none no-underline text-blue-darkest hover:underline w-auto" do %><% event.title %><% end %> </h2>
      <p class="text-grey-darker text-base"><%= event.snippet %>
      </p>
      <br />
      <%= link_to 'Read', event, class: "border border-indigo-darker rounded p-2 no-underline text-indigo-darker hover:text-white hover:bg-indigo-darker hover:shadow-inner" %>
    </div>
  </div>
  <% end %>
  <br /><br />

<h2 class="h1 mb-8 w-full lowercase h1 pb-4 mb-2 font-hairline">past events</h2>

<% @events.each do |event| %>
  <div class="w-64 rounded overflow-hidden shadow-lg m-2 pb-4">
    <%= image_tag event.picture.url(:square), class: "w-full" %>
    <div class="px-6 py-4">
      <h2 class="text-xl mb-2 font-hairline"><%= link_to event_path(event), class: "appearance-none no-underline text-blue-darkest hover:underline w-auto" do %><% event.title %><% end %> </h2>
      <p class="text-grey-darker text-base"><%= event.snippet %>
      </p>
      <br />
      <%= link_to 'Read', event, class: "border border-indigo-darker rounded p-2 no-underline text-indigo-darker hover:text-white hover:bg-indigo-darker hover:shadow-inner" %>
    </div>
  </div>
  <% end %>
</div>
<div class="1/4">

</div>

</div>

<br>

<%= link_to 'New Event', new_event_path %>

</div><!--end of container -->

<%= render "partials/footer" %>
